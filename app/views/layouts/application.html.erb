<!DOCTYPE html>
<html>
  <head>
    <title>LunchBot</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if user_signed_in? %>
      <%= current_user.email %> (<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>)
    <% else %>
      <%= link_to "Sign in", new_user_session_path %>/<%= link_to "Sign up", new_user_registration_path %>
    <% end %>

    <%= yield %>
  </body>
</html>

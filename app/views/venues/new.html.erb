<h2>New Venue</h2>

<%= form_for :venue, :url => venues_path do |f| %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :size => '50x3' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn primary' %>
      <%= link_to 'Cancel', venues_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
